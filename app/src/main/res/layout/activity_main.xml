<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Spinner
        android:id="@+id/food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/foods"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="482dp" />

    <Button
        android:id="@+id/find_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickFindIngredients"
        android:text="@string/find_ingredients"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="680dp" />

    <Button
        android:id="@+id/food_steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickShowFoodSteps"
        android:text="@string/show_food_steps"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="161dp" />

    <TextView
    android:id="@+id/ingredients"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="18dp"
    android:text="@string/ingredients" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/price" />


</androidx.constraintlayout.widget.ConstraintLayout>